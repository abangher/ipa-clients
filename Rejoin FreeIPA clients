ipa-client-install --hostname=`hostname -f` --mkhomedir --server=freeipa-office.XXXX.id --domain xxx.id --realm FREEIPA-OFFICE.XXXX.ID --force-join
ipa-client-install --hostname=`hostname -f` --mkhomedir --server=ipa-drc.XXXX.id --domain xxx.id --realm IPA-DRC.XXXX.ID --force-join
ipa-client-install --hostname=`hostname -f` --mkhomedir --server=freeipa-dev.XXXX.id --domain xxx.id --realm FREEIPA-DEV.XXXX.ID --force-join

